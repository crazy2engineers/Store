										<h3 class="card-title">Total income</h3>
										<div class="card-options">
											<a class="btn btn-sm btn-primary" href="/today_inc_view">View</a>
										</div>
									</div>
									<div class="card-body ">

										<small class="h6">Day</small>
										<div class="text-dark count mt-0 font-30"><%= today_inc.length%></div>

										<div class="progress progress-sm mt-0 mb-2">
											<div class="progress-bar bg-danger w-15" role="progressbar" ></div>
										</div>
										<div class=""><i class="fa fa-caret-down text-danger"></i> 20% decreases</div>
									</div>
								</div>
							</div>
